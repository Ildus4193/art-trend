<div style="vertical-align: bottom;position:relative; height: 235px; ">
  <% if admin_signed_in? %>
  <%= image_tag("ramka.png", :style => "position: absolute;") %>
    <%= link_to (image_tag(product.avatar.url(:thumb), :style => "width: 226px; height: 197px; position: relative; top: 15px; left: 15px;")), product %>
  <% else %>
  <%= image_tag("ramka.png", :style => "position: absolute;") %>
  <%= image_tag(product.avatar.url(:thumb), :style => "width: 226px; height: 197px; position: relative; top: 15px; left: 15px;") %>
  <% end %>
</div>
  <div style=" height: 45px; width: 250px; margin-left: 5px;"> 
    <p><%= product.title %></p>
