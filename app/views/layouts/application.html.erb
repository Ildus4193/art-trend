<%#= javascript_include_tag :ckeditor %>

</head>
<body>
  <%= render 'layouts/header' %>
  <div id="section_t"></div>
  <div id="section">
    <%= yield %>
  </div>
  <div id="section_bottom">
    <div id="nav_ftr">
      <ul>
        <li><%= link_to "Портфолио", root_path %></li>
        <li><%= link_to "Услуги", services_path %></li>
        <li><%= link_to "Контакты", contacts_path %></li>
      </ul>
    </div>
  </div>
  <%= render 'layouts/footer' %>
